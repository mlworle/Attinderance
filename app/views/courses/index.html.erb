<% provide(:title, "Course Index") %>
<% provide(:intro, "This is where a list of all courses will be found.") %>
<ul>
  <li>Course</li>
    <ol>
    <% @courses.each do |course|  %>
    <li> <%= course.name  %></li>
     <%= link_to 'Edit', edit_course_path(course)  %>
     <%= link_to 'Delete', course, method: :delete, data: {confirm: 'Are you sure?'}  %>
     <%= link_to 'Teacher', teachers_path %>
     <%= link_to 'Roster', course_rosters_path %>
    <% end  %>
  </ol>
</ul>
<br>
<h2><p>Want to create a new course? Click here: <%= link_to 'New', new_course_path  %></h2>
